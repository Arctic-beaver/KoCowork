<Window x:Class="CoCoworkView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoCoworkView"
        mc:Ignorable="d"
        Title="Коворк под контролем" Height="600"  Width="1000" Background="#FFB7BBC2">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="LeftGrid" Grid.Column ="0" Background="#FFE0DFDF" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="15*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button x:Name="BookingButton" Content="Аренда" Grid.Column="1" Grid.Row="1" Margin="0, 18, 0, 18"/>
            <Button x:Name="ProductsButton" Content="Товары" Grid.Column="1" Grid.Row="2" Margin="0, 18, 0, 18"/>
            <Button x:Name="ClientsButton" Content="Клиенты" Grid.Column="1" Grid.Row="3" Margin="0, 18, 0, 18"/>
            <Button x:Name="OrderHistoryButton" Content="История заказов" Grid.Column="1" Grid.Row="4" Margin="0, 18, 0, 18"/>
            <Button x:Name="CurrentOrderButton" Content="Текущий заказ" Grid.Column="1" Grid.Row="5" Margin="0, 18, 0, 18"/>
        </Grid>

        <Grid x:Name="BookingGrid" Visibility="Visible" Grid.Column ="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="RightBoookingGrid" Grid.Column ="2" Background="#FFE0DFDF" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="15*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Показать свободные" Grid.Column="1" Grid.Row="0"/>
                <Label Content="с" Grid.Column="0" Grid.Row="0" Margin="12 25 0 0"/>
                <DatePicker Grid.Column="1" Grid.Row="0" Margin="0 25 0 20"/>
                <Label Content="по" Grid.Column="0" Grid.Row="0" Margin="5 50 0 0" Grid.RowSpan="2"/>
                <DatePicker Grid.Column="1" Grid.Row="0" Margin="0 50 0 65" Grid.RowSpan="2"/>

                <Button x:Name="AddNewButton" Content="Инсертнуть" Grid.Column="1" Grid.Row="1" Margin="0, 30, 0, 0"/>

                <StackPanel x:Name="CheckStackPanel" Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" Margin="0, 20, 0, 10">
                    <CheckBox Content="Места" Margin="0, 5, 0, 0"/>
                    <CheckBox Content="Миниофисы" Margin="0, 5, 0, 0"/>
                    <CheckBox Content="Конференц-залы" Margin="0, 5, 0, 0"/>
                    <CheckBox Content="Переговорные" Margin="0, 5, 0, 0"/>
                    <CheckBox Content="ПК" Margin="0, 5, 0, 0"/>
                </StackPanel>
                <Button x:Name="EditButton" Content="Редактировать" Grid.Column="1" Grid.Row="4" Margin="0, 15, 0, 15"/>
                <Button x:Name="AddToOrderButton" Content="Добавить к заказу" Grid.Column="1" Grid.Row="5" Margin="0, 15, 0, 15"/>
                <Button x:Name="DeleteButton" Content="Удалить" Grid.Column="1" Grid.Row="6" Margin="0, 15, 0, 15"/>

            </Grid>

            <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" >
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="CornflowerBlue"/>
                        <Setter Property="BorderThickness" Value="0, 0, 1, 2"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header=" Тип" Width="*"/>
                    <DataGridTextColumn Header=" Кол-во мест"  Width="80"/>
                    <DataGridTextColumn Header=" Цена за день"  Width="90"/>
                    <DataGridTextColumn Header=" Фикс цена за день"  Width="110"/>
                    <DataGridTextColumn Header=" Цена за месяц"  Width="90"/>
                    <DataGridTextColumn Header=" Вместимость"  Width="80"/>
                    <DataGridTextColumn Header=" Описание"  Width="*"/>


                </DataGrid.Columns>
                
            </DataGrid>
        </Grid>

        <Grid x:Name="ProductsGrid" Grid.Column ="1">

        </Grid>

        <Grid x:Name="ClientsGrid" Grid.Column ="1">

        </Grid>

        <Grid x:Name="OrderHistoryGrid" Grid.Column ="1">

        </Grid>

        <Grid x:Name="CurrentOrderGrid" Grid.Column ="1">

        </Grid>



        <Grid x:Name="MiniOfficeInsertGrid" Grid.Column ="1">

        </Grid>

        <Grid x:Name="ConferenceRoomInsertGrid" Grid.Column ="1">

        </Grid>

        <Grid x:Name="MeetingRoomInsertGrid" Grid.Column ="1">

        </Grid>

        <Grid x:Name="PlaceInsertGrid" Grid.Column ="1">

        </Grid>

        <Grid x:Name="ComputersInsertGrid" Grid.Column ="1">

        </Grid>

        <Grid x:Name="ProductsInsertGrid" Grid.Column ="1"/>
    </Grid>
</Window>
